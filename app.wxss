/*小标签  */
.small-label{
  display: inline-block;
  vertical-align:-13%;
  height:24rpx;
  width:24rpx; 
  padding-left:2rpx;
}
/*左右箭头  */
.arrowL{
  height:20rpx;
  width:11rpx;
}
/*上下箭头  */
.arrowUp{
  height:11rpx;
  width:20rpx;
}

.not-found{
  background: transparent;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 450rpx;
  align-items: center;
}

.not-found image{
  width: 160rpx;
  height: 160rpx;
  display: block;
}
.not-found .text{
  font-size: 24rpx;
  margin-top: 30rpx;
}
/*文本最多显示3行，多了省略  */
.text-hid{
  display: flex;
  flex-direction:column;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  -moz-line-clamp:3;
  -o-line-clamp:3;
  -ms-line-clamp:3;
}