/* pages/custom/custom.wxss */

/*房源列表样式 start  */
.list_title{
  margin: 0 38rpx;
  padding-bottom: 37rpx;
  display: flex;
  flex-direction: row;
  position: relative;
}
.list_title .list_title_morehouse{
  font-size: 26rpx;
  color: #9f9f9f;
  position: absolute;
  right: 0;
  line-height: 42rpx;
}
.list_title .list_title_morehouse image{
  width: 11rpx;
  height: 20rpx;
  padding-left: 10rpx;
}
.list_item_out{
  border-top: 1rpx solid #e5e5e5; 
  margin: 0 0 0 38rpx;
} 
.list_item{
  margin-right: 38rpx; 
  padding: 40rpx 0; 
  overflow: hidden;
  height: auto;
}
.list_item .item_image{
  /*34%  */
  width:31.3%; 
  height: 160rpx;
  position: relative;
  float: left;
}
.list_item .item_image .hui_tip{
  position: absolute;
  left: 1rpx;
  top: 1rpx;
  width: 24rpx;
  height: 24rpx;
  color: #fff;
  background: #ff0000;
  font-size: 20rpx;
  line-height: 24rpx;
  text-align: center;
}
.list_item .item_image image{
  width: 100%;
  height: 160rpx;
}
.list_item .item_right{
  /* padding-left: 3%;  */
  position: relative;
  width: 66%;
  float: right;
}
.list_item .item_right .list_hang1{
  color: #333;
  font-size: 30rpx;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
}
.list_item .item_right .list_hang2{
  color: #656565;
  line-height: 38rpx;
  font-size: 22rpx;
  margin: 7rpx 0 7rpx 0;
}
.list_item .item_right .list_hang2 text{
  padding-right: 10rpx;
}
.list_item .item_right .list_hang3{
  color: #999;
  font-size: 22rpx;
  line-height: 38rpx;
  margin: 5rpx 0;
}
.list_item .item_right .list_hang4{
  color: #4f98ff;
  font-size: 20rpx;
  margin-top: 5rpx;
  white-space: nowrap;
}
.list_item .item_right .list_hang4 text{
  background: #e4efff;
  line-height: 30rpx;
  padding: 0 10rpx;
  display: inline-block;
  margin-right: 9rpx;
  border-radius: 6rpx;
}
.list_item .item_right .list_hang4 text.gongyu{
  background: #4f98ff;
  color: #fff;
}
.list_item .item_right .list_position{
  position: absolute;
  right: 0;
  text-align: right;
  top: 48rpx;
  color: #ff9000;
  font-size: 30rpx;
  margin-right: 10rpx;
}
.list_item .item_right .list_position text{
  font-size: 22rpx;
}
/*房源列表样式 end  */
